<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomIconSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="trackTint">@null</item>
        <item name="android:track">@drawable/track_switch_selector</item>
        <item name="thumbTint">@color/white</item>
        <item name="android:thumb">@drawable/thumb_switch_selector</item>
        <item name="android:textOn">ON</item>
        <item name="android:textOff">OFF</item>
        <item name="android:switchMinWidth">80dp</item>
        <item name="android:thumbTextPadding">16dp</item>
        <item name="android:showText">true</item>
    </style>
    <style name="SwitchTextStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>